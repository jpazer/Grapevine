extends ./base.jade
block append style
    link(rel="stylesheet", type="text/css", href="/assets/style.css")
block body
  nav
    a(href="/login")
      img#logo(src="/assets/img/face.png", alt="face logo")
    label#title GrapeVine
    .navlink
      a(href="/logout") Log out
    .navlink
      a(href="/account") Account
    .navlink
      a(href="/main") Home

  section#makeGame
    form#gameForm(class="gameForm", name="gameForm", action="/make", method="POST")
      label(for="name") Name: 
      input#gameName(type="text", name="name", placeholder="Game Name")
      label(for="gameMaxItr") Maximum Rounds: 
      input#gameMaxItr(type="text", name="maxItr", placeholder="# of rounds in the game")
      label(for="gameStartWords") Starting Words: 
      input#gameStartWords(type="text", name="startWords", placeholder="Starting sentence")
      input(type="hidden", name="_csrf", value="#{csrfToken}")
      a#makeGameSubmit(class="makeGameSubmit", href="#") Make Game
    
